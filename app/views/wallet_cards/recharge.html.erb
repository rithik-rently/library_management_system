<h2 style="text-align:center; background-color:grey;margin-top:40px;margin-bottom:25px;">Recharge Wallet</h2>
<%= form_with model: @wallet, url:"/wallet_card/add" do |form| %>
<div style="text-align:center;">
    <div>
        <%= form.label :Enter_Points %><br>
        <%= form.text_field :points %>
    </div>
    <div class="actions">
        <%= form.submit "Add" %>
    </div>
</div>
<% end %>